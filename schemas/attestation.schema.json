{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://autorisk.dev/schemas/attestation.schema.json",
  "title": "Audit Attestation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "algorithm",
    "signed",
    "signature"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "algorithm": {
      "type": "string",
      "const": "ed25519"
    },
    "signed": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "generated_at_utc",
        "key_id",
        "pack_fingerprint",
        "finalize_record_sha256",
        "audit_validate_report_sha256"
      ],
      "properties": {
        "generated_at_utc": {
          "type": "string",
          "minLength": 1
        },
        "key_id": {
          "type": "string",
          "pattern": "^[0-9a-f]{16}$"
        },
        "pack_fingerprint": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{64}$"
        },
        "finalize_record_sha256": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{64}$"
        },
        "audit_validate_report_sha256": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{64}$"
        },
        "key_label": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "signature": {
      "type": "string",
      "minLength": 16
    },
    "public_key_pem": {
      "type": "string",
      "minLength": 1
    }
  }
}
